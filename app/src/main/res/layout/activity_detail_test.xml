<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.hcmut.testiq.activities.DetailTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#8E9FB3"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_previous"
            android:background="#1861E1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1/10"
            android:id="@+id/txtIndexQuestion"
            android:paddingLeft="120dp"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-30dp"
            android:background="#1861E1"
            android:src="@drawable/icon_next" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:background="#3C8BDA"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:background="@drawable/rounded_button_cancel"
            android:layout_width="80dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnSubmitResult"
            android:text="Nộp bài và xem kết quả"
            android:layout_width="200dp"

            android:background="@drawable/rounded_button_submit"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>

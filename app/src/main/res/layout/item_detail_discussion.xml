<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFDE7"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgQuestion"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:src="@drawable/image_question" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF3E0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="Chọn hình phù hợp nhất để đặt vào khung còn trống:"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgResultA"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:src="@drawable/image_result_a" />

            <ImageView
                android:id="@+id/imgResultB"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:src="@drawable/image_result_b" />

            <ImageView
                android:id="@+id/imgResultC"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:src="@drawable/image_result_c" />

            <ImageView
                android:id="@+id/imgResultD"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:src="@drawable/image_result_d" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đáp án: "/>
            <TextView
                android:id="@+id/txtAns"
                android:text="A"
                android:textSize="22dp"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

